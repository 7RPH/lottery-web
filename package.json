{
  "name": "lottery-web",
  "version": "1.0.1",
  "description": "抽奖",
  "main": "main.js",
  "scripts": {
    "serve": "npm run start",
    "build": "webpack --mode=production --progress --colors",
    "dev": "webpack-dev-server --config webpack.dev.js --mode=development --progress --colors",
    "electron:dev": "electron .",
    "electron:build": "npm run build && electron-builder --win --x64",
    "dist": "electron-builder"
  },
  "author": "moshang",
  "license": "ISC",
  "devDependencies": {
    "autoprefixer": "^8.1.0",
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.3",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-es2015-loose": "^8.0.0",
    "clean-webpack-plugin": "^0.1.19",
    "copy-webpack-plugin": "^4.5.0",
    "cross-env": "^6.0.3",
    "css-loader": "^0.28.10",
    "html-loader": "^0.5.5",
    "html-webpack-plugin": "^3.0.4",
    "postcss-loader": "^2.1.1",
    "style-loader": "^0.20.2",
    "url-loader": "^1.0.1",
    "webpack": "^4.41.4",
    "webpack-cli": "^3.3.10",
    "webpack-dev-server": "^3.10.1",
    "webpack-merge": "^4.2.2",
    "electron": "^33.2.1",
    "electron-builder": "^25.1.8"
  },
  "dependencies": {

    "xlsx": "^0.18.5"
  },
  "build": {
    "appId": "com.lottery.app",
    "productName": "抽签程序",
    "directories": {
      "output": "electron-dist"
    },
    "files": [
      "dist/**/*",
      "main.js"
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "build/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "build/icon.png",
      "installerHeaderIcon": "build/icon.png"
    }
  }
}
